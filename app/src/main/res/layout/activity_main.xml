<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zack.activitiesandintents.MainActivity">

    <EditText
        android:hint="Enter data for second"
        android:id="@+id/etData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToSecond"
        android:text="Go to second activity"/>

    <EditText
        android:id="@+id/etUpdateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="updateTextView"

        />
    <TextView
        android:id="@+id/tvDisplayValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
